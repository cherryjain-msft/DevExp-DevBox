{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DevCenter Configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the Dev Center.",
      "default": "DevExP-devcenter"
    },
    "location": {
      "type": "string",
      "description": "The location of the Dev Center.",
      "default": "eastus2"
    },
    "catalogItemSyncEnableStatus": {
      "type": "string",
      "description": "Enable catalogs per project.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "microsoftHostedNetworkEnableStatus": {
      "type": "string",
      "description": "Enable Microsoft hosted network.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "installAzureMonitorAgentEnableStatus": {
      "type": "string",
      "description": "Enable installation of Azure Monitor Agent.",
      "enum": [
        "Enabled",
        "Disabled"
      ],
      "default": "Enabled"
    },
    "identity": {
      "type": "object",
      "$ref": "#/definitions/identity",
      "default": {
        "type": "SystemAssigned"
      }
    },
    "devBoxDefinitions": {
      "type": "array",
      "description": "List of dev box definitions.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/devBoxDefinition"
      }
    },
    "catalogs": {
      "type": "array",
      "description": "List of catalogs.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/catalog"
      }
    },
    "environmentTypes": {
      "type": "array",
      "description": "List of environment types.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/environmentType"
      }
    },
    "projects": {
      "type": "array",
      "description": "List of projects.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project"
      }
    },
    "tags": {
      "type": "object",
      "additionalProperties": true,
      "title": "The tags to automatically apply to deployed environments"
    }
  },
  "required": [
    "name",
    "location",
    "catalogItemSyncEnableStatus",
    "microsoftHostedNetworkEnableStatus",
    "installAzureMonitorAgentEnableStatus",
    "identity",
    "catalogs",
    "environmentTypes",
    "projects",
    "devBoxDefinitions",
    "tags"
  ],
  "definitions": {
    "identity": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of identity.",
          "default": "SystemAssigned",
          "enum": [
            "None",
            "SystemAssigned",
            "UserAssigned",
            "SystemAssigned, UserAssigned"
          ]
        },
        "roleAssignments": {
          "type": "array",
          "description": "List of role assignments.",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "type"
      ]
    },
    "catalog": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the catalog.",
          "default": "customTasks"
        },
        "type": {
          "type": "string",
          "description": "The type of the catalog.",
          "default": "gitHub",
          "enum": [
            "gitHub",
            "adoGit"
          ]
        },
        "uri": {
          "type": "string",
          "description": "The URI of the catalog.",
          "default": "https://github.com/Evilazaro/DevExP-DevBox.git"
        },
        "branch": {
          "type": "string",
          "description": "The branch of the catalog.",
          "default": "main"
        },
        "path": {
          "type": "string",
          "description": "The path to the catalog.",
          "default": ".configuration/devcenter/tasks"
        }
      },
      "required": [
        "name",
        "type",
        "uri",
        "branch",
        "path"
      ]
    },
    "devBoxDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the dev box definition.",
          "default": "DevExP-DevBox"
        },
        "image": {
          "type": "string",
          "description": "The description of the dev box definition.",
          "default": "DevExP-DevBox"
        },
        "imageVersion": {
          "type": "string",
          "description": "The version of the image.",
          "default": "latest"
        },
        "sku": {
          "type": "string",
          "description": "The name of the environment type."
        },
        "hibernateSupport": {
          "type": "string",
          "description": "The hibernate support for the dev box definition.",
          "default": "Enabled",
          "enum": [
            "Enabled",
            "Disabled"
          ]
        },
        "osStorageType": {
          "type": "string",
          "description": "Storage Type for the OS disk.",
          "default": "ssd_512gb",
          "enum": [
            "ssd_128gb",
            "ssd_256gb",
            "ssd_512gb",
            "ssd_1tb"
          ]
        },
        "default": {
          "type": "boolean",
          "description": "The default dev box definition.",
          "default": true
        }
      },
      "required": [
        "name",
        "image",
        "imageVersion",
        "sku",
        "hibernateSupport",
        "osStorageType"
      ]
    },
    "projectCatalog": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the catalog.",
          "default": "environments"
        },
        "type": {
          "type": "string",
          "description": "The type of the catalog.",
          "default": "gitHub",
          "enum": [
            "gitHub",
            "adoGit"
          ]
        },
        "uri": {
          "type": "string",
          "description": "The URI of the catalog.",
          "default": "https://github.com/Evilazaro/identityProvider.git"
        },
        "branch": {
          "type": "string",
          "description": "The branch of the catalog.",
          "default": "main"
        },
        "path": {
          "type": "string",
          "description": "The path to the catalog.",
          "default": ".configuration/devcenter/environments/dev"
        }
      },
      "required": [
        "name",
        "type",
        "uri",
        "branch",
        "path"
      ]
    },
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the project.",
          "default": "identityProvider"
        },
        "description": {
          "type": "string",
          "description": "The description of the project.",
          "default": "identityProvider"
        },
        "environmentTypes": {
          "type": "array",
          "title": "The environment types for the project",
          "description": "The environment types must be defined in the environmentTypes section of the DevCenter configuration file.",
          "items": {
            "$ref": "#/definitions/projectEnvironmentType"
          }
        },
        "catalogs": {
          "type": "array",
          "description": "List of catalogs for the project.",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/projectCatalog"
          },
          "pools": {
            "type": "array",
            "description": "List of pools for the project.",
            "minItems": 1,
            "items": {
              "$ref": "#/definitions/projectPool"
            }
          },
          "tags": {
            "type": "object",
            "additionalProperties": true,
            "title": "The tags to automatically apply to deployed environments"
          }
        }
      },
      "required": [
        "name",
        "description",
        "environmentTypes",
        "catalogs",
        "pools",
        "tags"
      ]
    },
    "environmentType": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the environment type.",
          "default": "dev"
        }
      },
      "required": [
        "name"
      ]
    },
    "projectEnvironmentType": {
      "type": "object",
      "required": [
        "name",
        "deploymentTargetId"
      ],
      "properties": {
        "name": {
          "type": "string",
          "title": "The name of the environment type",
          "default": "dev"
        },
        "identity": {
          "type": "object",
          "$ref": "#/definitions/identity"
        },
        "deploymentTargetId": {
          "type": "string",
          "title": "The Azure subscription id to deploy environments",
          "default": "00000000-0000-0000-0000-000000000000"
        }
      }
    },
    "projectPool": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the pool."
        },
        "devBoxDefinitionName": {
          "type": "string",
          "description": "The description of the pool."
        }
      },
      "required": [
        "name",
        "devBoxDefinitionName"
      ]
    }
  }
}